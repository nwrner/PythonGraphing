 #############PIE CHART################
 #!/usr/bin/python
import matplotlib.pyplot as plt
from random import *
days = [1,2,3,4,5]
sleeping = [7,8,6,11,7]
eating = [2,3,4,3,2]
working = [7,8,7,2,2]
playing = [8,5,7,8,13]

slices = [7,2,2,13]
activities = ['sleeping','eating','working','playing']
cols = ['c','m','r','b']
plt.pie(slices, labels=activities, colors=cols, explode=(0,0.1,0.5,0), autopct='%1.1f%%')

#plt.xlabel('X')
#plt.ylabel('Y')
plt.title('Interesting Graph')
#plt.legend()
plt.show()
plt.show()

